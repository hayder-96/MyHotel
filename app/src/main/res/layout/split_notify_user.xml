<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:orientation="vertical"
    tools:context = ".User.NotifyActivity">

  <TextView
      android:id = "@+id/text_name_noty"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:textColor="#000"
      android:textStyle="bold"
      android:textSize="20sp"
      android:text = "عشتار" />
  <androidx.cardview.widget.CardView
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:elevation="30dp"
      app:cardBackgroundColor = "#79C2E3">
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical">
          <TextView
              android:id = "@+id/text_content_noty"
              android:layout_width = "match_parent"
              android:layout_height = "wrap_content"
                android:textStyle="italic"
              android:text = "لقد تم حجز طلبك"
              android:textColor = "#000"
              android:textSize = "15sp" /><TextView
        android:id = "@+id/textView_time"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "TextView" /></LinearLayout></androidx.cardview.widget.CardView>
  <View
    android:id = "@+id/view13"
    android:layout_width = "match_parent"
    android:layout_height = "7dp" /></LinearLayout>