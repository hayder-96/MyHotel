<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/layout_main"
     android:layout_height = "wrap_content">


<LinearLayout
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "horizontal">
            <ImageView
                android:id = "@+id/image_rooms"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                tools:srcCompat = "@tools:sample/avatars" /><LinearLayout
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical">
            <LinearLayout
                android:id = "@+id/laylay"
                android:layout_width = "match_parent"
                android:layout_height = "0dp"
                android:layout_weight="1"
                android:orientation = "horizontal"
                android:visibility = "gone">
                        <TextView
                            android:id = "@+id/text_main"
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "9"
                            android:gravity = "center"
                            android:text = "محجوز"
                            android:textColor = "#FA0303"
                            android:textSize = "15sp" />

                    <TextView
                        android:id = "@+id/textpop"
                        android:layout_width = "0dp"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "0.50"
                        android:text = "&#8942;"
                        android:textAppearance = "?android:textAppearanceLarge"
                        android:textColor = "#000000" />



                 </LinearLayout>


      <View
          android:layout_width = "match_parent"
          android:layout_height = "4dp" />


    <androidx.cardview.widget.CardView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:background="#fff"
        android:elevation = "30dp">



    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "horizontal">
            <TextView
                android:id = "@+id/textView34"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textColor = "#000"
                android:textSize = "20sp"
                android:textStyle="bold"
                android:text = "غرفة\t" /><TextView
        android:id = "@+id/text_name_room"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center"
        android:text = "ديلوكس"
        android:textColor = "#000"
        android:textSize = "20sp" /></LinearLayout>

    </androidx.cardview.widget.CardView>




    <View
        android:id = "@+id/view8"
        android:layout_width = "match_parent"
        android:layout_height = "15dp" />
    <androidx.cardview.widget.CardView
        android:layout_width = "wrap_content"
        android:background="#fff"
        android:layout_height = "wrap_content"

        android:elevation = "20dp"

        ><LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "horizontal">
            <TextView
                android:id = "@+id/textView49"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textColor = "#000"
                android:textSize = "20sp"
                android:text = "من نوع\t" /><TextView
        android:id = "@+id/text_type_rooms"
        android:layout_width = "wrap_content"

        android:layout_height = "wrap_content"
        android:gravity = "center"
        android:text = "توام"

        android:textColor = "#000"
        android:textSize = "20sp" /></LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
    android:id = "@+id/view9"
    android:layout_width = "match_parent"
    android:layout_height = "15dp" />
    <androidx.cardview.widget.CardView
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:background="#fff"
    android:layout_gravity = "center">
    <TextView
        android:id = "@+id/text_price_rooms"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center"
        android:text = "$100"
        android:textColor = "#000"
        android:textSize = "20sp" />
    </androidx.cardview.widget.CardView>




</LinearLayout>





</LinearLayout>




     <LinearLayout
         android:id = "@+id/layay"
         android:layout_width = "match_parent"
         android:layout_height = "wrap_content"
         android:orientation = "horizontal"
         android:visibility = "gone">
            <TextView
                android:id = "@+id/textView50"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:text = "هناك خلل لضغط لمعرفة السبب"
                android:textColor = "#FF0606"
                android:textSize = "17sp" />
         <ImageView
             android:id = "@+id/image_show"
             android:layout_width = "wrap_content"
             android:layout_height = "wrap_content"
             android:layout_weight = "1"
             app:srcCompat = "@drawable/ic_details" /></LinearLayout>







    <View
    android:id = "@+id/view10"
    android:layout_width = "match_parent"
    android:background="#5C6BC0"
    android:layout_height = "35dp" />



</LinearLayout>