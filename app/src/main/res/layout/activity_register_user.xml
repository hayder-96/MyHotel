<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical"
    tools:context = ".User.RegisterActivityUser">

  <androidx.cardview.widget.CardView
      android:layout_width = "match_parent"
      android:layout_margin="10dp"
      android:elevation="20dp"
      android:layout_height = "match_parent"><LinearLayout
      android:layout_width = "match_parent"
      android:layout_height = "match_parent"
      android:orientation = "vertical">
            <View
                android:id = "@+id/view36"
                android:layout_width = "match_parent"
                android:layout_height = "10dp" /><EditText
                android:id = "@+id/edit_name_user"
                android:layout_width = "match_parent"
                 android:textSize="18sp"
                 android:hint="الاسم"
      android:gravity="center"
                android:layout_height = "wrap_content" /><View
      android:id = "@+id/view35"
      android:layout_width = "match_parent"
      android:layout_height = "10dp" /><EditText
      android:id = "@+id/edit_email_user"
      android:layout_width = "match_parent"
      android:textSize="18sp"
      android:layout_height = "wrap_content"
      android:hint="البريد الالكتروني"
      android:gravity="center"
      android:inputType = "textEmailAddress" /><View
      android:id = "@+id/view37"
      android:layout_width = "match_parent"
      android:layout_height = "10dp" /><EditText
      android:id = "@+id/edit_Password_user"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:hint="الرمز السري"
      android:textSize="18sp"
      android:gravity="center"
      android:inputType = "textPassword" /><View
      android:id = "@+id/view38"
      android:layout_width = "match_parent"
      android:layout_height = "30dp" /><Button
      android:id = "@+id/but_reg"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:onClick = "registeruser"
      android:text = "تسجيل الدخول" /></LinearLayout></androidx.cardview.widget.CardView>
  </LinearLayout>