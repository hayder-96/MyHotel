<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id = "@+id/lia"
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:orientation = "vertical">

<androidx.cardview.widget.CardView
    android:layout_width = "match_parent"
    android:elevation="20dp"
    app:cardCornerRadius="30dp"
    android:layout_height = "wrap_content" ><LinearLayout
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_gravity = "center"
    android:layout_margin = "10dp"
    android:background = "#79C2E3"
    android:elevation = "10dp">
            <ImageView
                android:id = "@+id/image_rooms_user"

                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center"
                android:layout_weight = "1"
                tools:srcCompat = "@tools:sample/avatars" />
    <LinearLayout
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:orientation = "vertical">
            <TextView
                android:id = "@+id/text_mahjos"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center"
                android:text = "محجوز"
                android:textColor = "#FA0303"
                android:textSize = "15sp"
                android:visibility = "gone" /><LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "0dp"
        android:layout_weight = "1"
        android:orientation = "horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:elevation = "20dp"
                app:cardBackgroundColor = "#8EC1D8"
                app:cardCornerRadius = "5dp">
                <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:orientation = "horizontal">
            <TextView
                android:id = "@+id/textView16"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "غرفة"

                android:textColor = "#000"
                android:textSize = "15sp"
                android:textStyle = "bold" /><TextView
                    android:id = "@+id/text_name_room_user"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:gravity = "start"
                    android:text = "ديلوكس"
                    android:textColor = "#000"
                    android:textSize = "15sp"
                    android:textStyle = "bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
                </LinearLayout><LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "0dp"
        android:layout_weight = "1"

        android:orientation = "horizontal">
              <androidx.cardview.widget.CardView
                  android:layout_width = "wrap_content"
                  android:layout_height = "wrap_content"
                  android:elevation = "20dp"
                  app:cardBackgroundColor = "#7EB6CF"
                  app:cardCornerRadius = "5dp"><LinearLayout
                  android:layout_width = "match_parent"
                  android:layout_height = "match_parent"
                  android:orientation = "horizontal">
            <TextView
                android:id = "@+id/textView17"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "من نوع"
                android:textColor = "#000"
                android:textSize = "15sp" /><TextView
                  android:id = "@+id/text_type_rooms_user"
                  android:layout_width = "wrap_content"

                  android:layout_height = "wrap_content"
                  android:gravity = "start"
                  android:text = "تو"
                  android:textColor = "#000"
                  android:textSize = "15sp" /></LinearLayout></androidx.cardview.widget.CardView></LinearLayout>
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            android:orientation = "horizontal">
                          <TextView
                              android:id = "@+id/text_price_rooms_user"
                              android:layout_width = "wrap_content"
                              android:layout_height = "wrap_content"
                              android:layout_weight = "3"
                              android:elevation = "20dp"
                              android:gravity = "center"
                              android:text = "100$"
                              android:textColor = "#000"
                              android:textSize = "15sp"
                              android:textStyle = "bold" />
                    </LinearLayout>
    </LinearLayout>
</LinearLayout></androidx.cardview.widget.CardView>

    <View

        android:layout_width = "match_parent"
        android:layout_height = "3dp" />
    </LinearLayout>